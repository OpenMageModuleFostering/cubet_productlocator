<config>
    <modules>
        <Cubet_Productlocator>
            <version>2.1.0</version>
        </Cubet_Productlocator>
    </modules>
    <frontend>
        <routers>
            <productlocator>
                <use>standard</use>
                <args>
                    <module>Cubet_Productlocator</module>
                    <frontName>productlocator</frontName>
                </args>
            </productlocator>
        </routers>
        <layout>
            <updates>
                <productlocator>
                    <file>productlocator.xml</file>
                </productlocator>
            </updates>
        </layout>
    </frontend>   
    <global>
        <models>
            <productlocator_adminhtml>
                <class>Cubet_Productlocator_Adminhtml_Model</class>
            </productlocator_adminhtml>
            <productlocator>
                <class>Cubet_Productlocator_Model</class>
                <resourceModel>productlocator_mysql4</resourceModel>
            </productlocator>
            <productlocator_mysql4>
                <class>Cubet_Productlocator_Model_Mysql4</class>
                <entities>
                    <locator>
                        <table>cubet_productlocator</table>
                    </locator>
                </entities>
            </productlocator_mysql4>
        </models>
        <helpers>
            <productlocator>
                <class>Cubet_Productlocator_Helper</class>
            </productlocator>
        </helpers>
        <resources>
            <productlocator_setup>
                <setup>
                    <module>Cubet_Productlocator</module>
                    <class>Cubet_Productlocator_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productlocator_setup>
            <productlocator_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productlocator_write>
            <productlocator_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productlocator_read>
        </resources>
        <blocks>
            <productlocator>
                <class>Cubet_Productlocator_Block</class>
            </productlocator>
        </blocks>
        <events>
            <controller_action_layout_generate_blocks_before>
                <observers>
                    <Cubet_Productlocator_Model_Observer>
                        <type>singleton</type>
                        <class>Cubet_Productlocator_Model_Observer</class>
                        <method>set_block</method>
                    </Cubet_Productlocator_Model_Observer>
                </observers>
            </controller_action_layout_generate_blocks_before>     
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <productlocator>
                    <file>productlocator.xml</file>
                </productlocator>
            </updates>
        </layout>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <productlocator>
                                            <title>Productlocator - All</title>
                                        </productlocator>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
